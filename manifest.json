{
    "manifest_version": 3,
    "name": "Netra: Indic Lens",
    "version": "1.0.0",
    "description": "Real-time OCR and Translation of the user's screen entirely offline.",
    "permissions": [
        "activeTab",
        "scripting",
        "storage",
        "desktopCapture",
        "tabCapture",
        "offscreen"
    ],
    "action": {
        "default_popup": "index.html"
    },
    "background": {
        "service_worker": "src/background/index.ts",
        "type": "module"
    },
    "content_scripts": [
        {
            "matches": [
                "<all_urls>"
            ],
            "js": [
                "src/content/index.tsx"
            ],
            "run_at": "document_end"
        }
    ],
    "web_accessible_resources": [
        {
            "resources": [
                "assets/*",
                "*.wasm",
                "*.data"
            ],
            "matches": [
                "<all_urls>"
            ]
        }
    ],
    "content_security_policy": {
        "extension_pages": "script-src 'self' 'wasm-unsafe-eval'; object-src 'self'"
    }
}